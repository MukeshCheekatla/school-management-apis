    {
      "name": "List Schools (sorted by distance)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://school-management-apis-exhd.onrender.com/listSchools?lat=17.3850&lon=78.4867",
          "host": [
            "https://school-management-apis-exhd.onrender.com"
          ],
          "path": [
            "listSchools"
          ],
          "query": [
            {
              "key": "lat",
              "value": "17.3850"
            },
            {
              "key": "lon",
              "value": "78.4867"
            }
          ]
        },
        "description": "Returns all schools sorted by distance (km) from the user's coordinates."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response is an array sorted by distance', function () {",
              "  const arr = pm.response.json();",
              "  pm.expect(Array.isArray(arr)).to.be.true;",
              "  for (let i = 1; i < arr.length; i++) {",
              "    pm.expect(arr[i].distance_km).to.be.at.least(arr[i-1].distance_km);",
              "  }",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": [
        {
          "name": "OK",
          "originalRequest": {},
          "status": "OK",
          "code": 200,
          "_postman_previewlanguage": "json",
          "body": "[\n  {\n    \"id\": 1,\n    \"name\": \"Green Valley High School\",\n    \"address\": \"123 Main Street, Hyderabad\",\n    \"latitude\": 17.385,\n    \"longitude\": 78.4867,\n    \"distance_km\": 0.0\n  },\n  {\n    \"id\": 2,\n    \"name\": \"Sunrise Public School\",\n    \"address\": \"Madhapur, Hyderabad\",\n    \"latitude\": 17.4416,\n    \"longitude\": 78.3911,\n    \"distance_km\": 11.1\n  }\n]"
